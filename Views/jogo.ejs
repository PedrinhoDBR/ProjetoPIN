    document.getElementById("desc").innerHTML = desc
    const req = document.getElementById("req").textContent
    document.getElementById("req").innerHTML = req
    const req2 = document.getElementById("req2").textContent
    document.getElementById("req2").innerHTML = req2
    const req3 = document.getElementById("req3").textContent
    document.getElementById("req3").innerHTML = req3

